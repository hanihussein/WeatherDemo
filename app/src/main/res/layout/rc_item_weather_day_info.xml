<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="31dp"
    android:gravity="center"
    android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_day_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textAppearance="@style/text_day_name" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tv_weather_pic"
        android:layout_width="42dp"
        android:layout_height="46dp"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_day_name" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_weather_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:textAppearance="@style/text_location_temp_item" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_weather_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.5dp"
        android:textAppearance="@style/text_location_speed_item" />


</LinearLayout>