<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherDemo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_3</item>
        <item name="colorOnPrimary">@color/gray_4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    !-- styles.xml -->

    <style name="text_screen_title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="text_day_name">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#C9CAD0</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="text_location_name">
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="text_location_info">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/gray_4</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="text_location_temp">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/Granite_600</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="text_location_temp_item">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/gray_4</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="text_location_speed">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/Granite_600</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="text_location_speed_item">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/gray_4</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


</resources>